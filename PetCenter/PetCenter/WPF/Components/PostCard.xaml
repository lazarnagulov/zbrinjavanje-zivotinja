<UserControl x:Class="PetCenter.WPF.Components.PostCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PetCenter.WPF.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border
            CornerRadius="10,10,0,0"                    
            BorderThickness="1">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="{StaticResource WinBorderColor1}" Offset="0"/>
                    <GradientStop Color="{StaticResource WinBorderColor2}" Offset="0.5"/>
                    <GradientStop Color="{StaticResource WinBorderColor3}" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="2*"/>
                </Grid.RowDefinitions>
                <Border Grid.Row="0" CornerRadius="10,10,0,0">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0.7">
                            <GradientStop Color="{StaticResource PrimaryBackColor1}" Offset="0"/>
                            <GradientStop Color="{StaticResource PrimaryBackColor2}" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>
                <Border Grid.Row="1" Grid.RowSpan="4" >
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0.7">
                            <GradientStop Color="{StaticResource SecondaryBackColor1}" Offset="0"/>
                            <GradientStop Color="{StaticResource SecondaryBackColor2}" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>
                <DockPanel 
                    Grid.Row="0" 
                    HorizontalAlignment="Stretch" 
                    VerticalAlignment="Stretch">
                    <TextBlock Width="200" Margin="10" FontWeight="Bold">
                        <TextBlock.Text>
                            <MultiBinding StringFormat="{}Author:  {0}">
                                <Binding Path="Author" />
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>
                    <TextBlock Text="{Binding CreationDate}" 
                               HorizontalAlignment="Right"
                               Width="60"
                               Margin="10"/>
                </DockPanel>
                <TextBlock 
                    Margin="10"
                    Grid.Row="2"
                    FontSize="16"
                    Text="{Binding Text}"
                    TextWrapping="Wrap"/>
                <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button 
                        
                        Command="{Binding DataContext.LikePostCommand, 
                                    RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}"
                            CommandParameter="{Binding }"
                        BorderThickness="0" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                        Width="50"
                        Content="Like"/>
                    <Label Content="{Binding LikeCount}" VerticalAlignment="Center"/>
                </StackPanel>
                <StackPanel Grid.Row="4" Orientation="Vertical" Margin="10,0">
                    <TextBox HorizontalAlignment="Stretch" 
                             Text="{Binding NewComment, UpdateSourceTrigger=PropertyChanged}"/>
                    <Button 
                        Command="{Binding DataContext.AddCommentCommand, 
                                    RelativeSource={RelativeSource AncestorType={x:Type ItemsControl}}}"
                                CommandParameter="{Binding }"
                        BorderThickness="0" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                        HorizontalAlignment="Stretch"
                        FontSize="12"
                        Content="Comment"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
