<Window x:Class="PetCenter.WPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:mvvm="clr-namespace:PetCenter.WPF.MVVM"
        xmlns:views="clr-namespace:PetCenter.WPF.Views"
        xmlns:viewModels="clr-namespace:PetCenter.WPF.ViewModels"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                  mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <ContentControl Content="{Binding CurrentViewModel}">
        <ContentControl.Resources>
            <DataTemplate DataType="{x:Type viewModels:PostListingViewModel}">
                <views:PostListingView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModels:Test1ViewModel}">
                <views:Test1View></views:Test1View>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModels:Test2ViewModel}">
                <views:Test2View></views:Test2View>
            </DataTemplate>
        </ContentControl.Resources>
    </ContentControl>
</Window>
